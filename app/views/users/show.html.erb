<% provide :title, @user.name %>
<div class="container">
  <div class="row">
    <aside class="col-md-2">
      <section class="user_info">
        <h1>
          <% if @user.picture? %>
            <%= image_tag @user.picture.thumb.url, class: "gravatar" %>
          <% else %>
            <%= image_tag("default-avatar", alt: @user.name, class: "gravatar", width: 50, height: 50) %>
          <% end %>
          <%= @user.name %>
        </h1>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= render "follow_form" if user_signed_in? %>
      <% if @user.reviews.any? %>
        <h3><%= "レビュー" %> (<%= @user.reviews.count %>)</h3>
          <!-- TODO: show review -->
        <% @user.reviews.each do |review| %>
          <div class="Review-comment">
            <div class="Review-comment-left">
              <div>
                <div class="Review-comment-leftHeader">
                  <div class="Review-comment-leftScore blue_star">
                      <%= review.rate %> <span class="glyphicon glyphicon-star-empty"></span>
                  </div>
                </div>
                <div class="Review-comment-reviewer" data-info-type="reviewer-name">
                  <strong><%= review.motel.name %> ホテル</strong>
                </div>
                <div class="Review-comment-frequentTraveler">
                  <span class="Review-comment-frequentTraveler-text"><%= review.motel.address %></span>
                </div>
                <div class="Review-comment-reviewDate">
                  <div>
                    <i class="glyphicon glyphicon-time ficon ficon-16 ficon-mmb-inbox review-gray"></i>
                    <span class="Review-statusBar-date "><%= review.created_at.strftime("%Y/%m/%d") %></span>
                  </div>
                </div>
              </div>
            </div><div class="Review-comment-right">
              <div class="Review-comment-bubble blue">
                <div class="Review-comment-body" data-selenium="">
                  <div class="Review-comment-bodyTitle"><%= review.title %></div>
                  <div class="Review-comment-bodyText" data-type="comment"><%= review.content %></div>
                </div>
                <div class="Review-statusBar">
                  <div class="Review-statusBar-right">
                      <a data-confirm="本当に削除しても良いですか？" rel="nofollow" data-method="delete" href="#">削除</a>
                      <a href="#">編集</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
